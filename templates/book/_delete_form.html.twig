<form class="delete-item icon-form" method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this book?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn icon-btn"><img src="{{ asset('build/images/icons/trash.svg') }}" alt=""></button>
</form>
